<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}} !</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a review:</h3>

        <form class="form new-review">
            <div class="form-group">
                <label for="location">location:</label>
                <input class="form-input" type="text" id="location" name="location" />
            </div>
            <div class="form-group">
                <label for="review">review:</label>
                <textarea class="form-input" id="review" name="review"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Publish</button>
            </div>
        </form>
    </div>

    {{#if reviews.length }}
    <div class="col-md-6 review-list">
        <h3>Past reviews</h3>
    {{#each reviews as |review|}}
    <div class=""
    </div>
</div>